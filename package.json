{
  "name": "boom-backend",
  "version": "1.0.0",
  "main": "./dist/server.js",
  "scripts": {
    "build": "yarn clean && tsc -p tsconfig.json && npx tsc-alias -p tsconfig.json",
    "clean": "rimraf dist/",
    "copy-files": "cp -a ./data/contracts/sample/. ./data/contracts/main",
    "dev": "yarn copy-files && cross-env NODE_ENV=development nodemon",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "start": "cross-env yarn db:migrate && cross-env node dist/server.js",
    "test": "cross-env NODE_ENV=testing mocha -r ts-node/register 'src/test/**/*.test.ts'",
    "db": "sequelize-cli",
    "db:init": "sequelize-cli init",
    "db:create": "sequelize-cli db:create --config dist/config/databases.js",
    "db:migrate": "sequelize-cli db:migrate --config dist/config/databases.js --migrations-path dist/migrations",
    "db:migrate:create": "sequelize-cli migration:generate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo --config dist/config/databases.js --migrations-path dist/migrations",
    "db:migrate:undo:all": "sequelize-cli db:migrate:undo:all --config dist/config/databases.js --migrations-path dist/migrations",
    "db:seed": "sequelize-cli db:seed:all --config dist/config/databases.js --seeders-path dist/seeders"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.26.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "cross-env": "^7.0.3",
    "discord-webhook-node": "^1.1.8",
    "dotenv": "^10.0.0",
    "envalid": "^7.2.2",
    "eth-sig-util": "^3.0.1",
    "ethereumjs-util": "^7.1.4",
    "ethers": "^5.6.1",
    "express": "^4.17.1",
    "faker": "^5.5.3",
    "hardhat": "^2.9.1",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.0.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.9.0",
    "sequelize-cli": "^6.3.0",
    "sequelize-replace-enum-postgres": "^1.6.0",
    "typescript": "^4.4.4",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/cors": "^2.8.12",
    "@types/cron": "^1.7.3",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/ioredis": "^4.28.10",
    "@types/lodash": "^4.14.176",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.7",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/sequelize": "^4.28.11",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.6.6",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.11.0",
    "eslint-plugin-import": "^2.25.2",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.14",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.4.1",
    "tsconfig-paths": "^3.11.0"
  }
}
